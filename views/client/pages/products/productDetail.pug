extends ../../layouts/default.pug

block addCss 
    link(rel="stylesheet", href="/css/productDetail.css")

block main
    .container
        .product.row
            if product.thumbnail
                .margin.outer-thumbnail.col-5
                    img(src=product.thumbnail, alt=product.title)
            
            .col-6.specifications
                h2.margin.product-title= product.title 

                if product.description
                    .margin.product-attribute
                        span.product-description!= product.description

                if product.price
                    .margin.product-attribute.price
                        span.old-price= ' $' + product.price
                        span.new-price= ' $' + product.newPrice
                        span.discount= ' ' + product.discountPercentage + '% discount'

                .order.margin
                    span.quantity-label Quantity
                    button.quantity-btn - 
                    input.quantity-input(type="number", value=1)
                    button.quantity-btn +
                    span.stock= ' Stock: ' + product.stock
                
                button.add-to-cart Add to cart
                button.buy-now Buy Now
