mixin selectParentCategory(categoryTree, level, oldParent)
  each item in categoryTree
    - const prefix = Array(level + 1).join('-- ')
    option(value=item.id, selected= oldParent === item.id)= `${prefix} ${item.title}`
    if item.child.length > 0
      +selectParentCategory(item.child, level + 1, oldParent)