mixin change-product-form()
    form(id="change-product-form" action="/admin/products/change-list-product" method="POST")
        input(
            type="text"
            style="display: none"
            name="inputChangeListProduct"
        )
        .select-group 
            select.select-change-product
                option(value="" disabled selected) --Select an action--
                option(value="active") Active
                option(value="inactive") Inactive
                option(value="delete") Delete
            .input-group-append 
                button(
                    name="btn-change-list-product"
                    class="btn btn-success btn-change-product-form"
                    type="submit"
                ) Apply