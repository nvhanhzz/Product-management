extends ../../layouts/default.pug
include ../../mixins/notification.pug

block addCss 
    link(rel="stylesheet", href="/admin/css/createProduct.css")

block main
    if currentUser.role.permission.includes("update-role")
        - if (messages.success)
            +notf-success()
        - if (messages.fail)
            +notf-fail()
        h1 Update role

        form(action=`${prefixAdmin}/roles/update-role/${role.id}?_method=PATCH`, method="POST")
            div.form-group
                label(for="title") Title:
                input#title.form-control(type="text", name="title", placeholder="Enter the role title", value=role.title, required)
            
            div.form-group
                label(for="title") Short description:
                input#title.form-control(type="text", name="description", placeholder="Enter the role description", value=role.description)
            
            div.form-group
                button.btn.btn-primary(type="submit") Submit
    else 
        h1 No permission