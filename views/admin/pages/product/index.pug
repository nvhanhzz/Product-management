extends ../../layouts/default.pug
include ../../mixins/filterStatus.pug
include ../../mixins/searchForm.pug
include ../../mixins/pagination.pug
include ../../mixins/changeProductForm.pug

block main
    - if (messages.success)
        div.alert.alert-success(role="alert", id="successAlert")
            span= messages.success
            button.close-alert-btn(type='button')
                i.fa-solid.fa-xmark
    h1 List products 

    .card.mb-3 
        .card-header Filter and Search 
        .card-body 
            .row 
                .col-6
                    +filter-status(filterStatus)
                .col-6 
                    +search-form(keyword)

    .card.mb-3 
        .card-header List 
            +change-product-form()
        .card-body 
            table.table.table-hober.table-sm
                thead 
                    tr 
                        th 
                            input(type="checkbox" name="checkall")
                        th Order 
                        th Thumbnail  
                        th Title 
                        th Price 
                        th Position
                        th Status 
                        th Action 

                tbody 
                    each item, index in products
                        tr.item 
                            td
                                input(type="checkbox" name="checkitem" val=item._id)
                            td #{(pagination.page - 1) * pagination.limit + index + 1}
                            //- td #{item.position}
                            td 
                                img(
                                    src=item.thumbnail
                                    alt=item.title
                                    width="100px"
                                    height="auto"
                                )
                            td #{item.title} 
                            td #{item.price}$
                            td 
                                input(type="number" value=item.position class="position-product")
                            td 
                                if(item.status === "active")
                                    button(class="badge badge-success" itemId=item._id val="active") Active 
                                else 
                                    button(class="badge badge-danger" itemId=item._id val="inactive") Inactive 
                            td 
                                button(class="btn btn-warning btn-sm") Update 
                                button(class="btn btn-danger btn-sm ml-1" delete-button item_id=item._id) Delete
                    
    .pagination
        +pagination(pagination)

    form(action=`${prefixAdmin}/products/change-status` 
    class="change-status-form"
    method="POST")

    form(action=`${prefixAdmin}/products/delete-product` 
    class="delete-product-form"
    method="POST")

    script(src="js/product.js")